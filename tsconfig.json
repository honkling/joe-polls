{
    "include": ["src/"],
    "exclude": ["node_modules/"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022", "DOM"],
        "outDir": "dist",
        "esModuleInterop": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}